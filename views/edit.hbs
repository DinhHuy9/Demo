<body style="background-color: aquamarine;">
    <div class="mb-3 text-center">
        <h1 style="color: green;">Edit Product</h1>
        <form action="/edit" method="post">
            <input type="hidden" name="id" value="{{product._id}}">
            Name <input type="text" name="txtName" value="{{product.name}}">
            <br>
            Price <input type="text" name="txtPrice" value="{{product.price}}">
            <br>
            Picture URL
            <input type="text" name="txtPic" value="{{prodcut.picURL}}">
            <br>
            <input type="submit" value="Update Product" style="background-color:orange">
        </form>
    </div>

</body>

</html>